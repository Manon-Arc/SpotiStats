{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@api/*": ["./api/*"],
      "@api/type": ["./api/type/*"],
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hook/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
